        </div>
    </div>
</nav>
<!-- Content -->
<div class="col-md-3 center">
    <h3>Insert meal</h3>
    <form action="/domain/meals/insert" method="post">
        <div class="form-group">
            <label>Meal name</label>
            <input type="text" class="form-control" name="meal_name" maxlength="60" required/>
        </div>
        <div class="form-group">
            <label>Calories (per 100g)</label>
            <input type="number" step="0.01" class="form-control" name="kcal_100g" min="0.00" max="10000" required/>
        </div>
        <div class="form-group">
            <label>Proteins  (per 100g)</label>
            <input type="number" step="0.01" class="form-control" name="proteins_100g" min="0.00" max="10000" required>
        </div>
        <div class="form-group">
            <label>Carbs  (per 100g)</label>
            <input type="number" step="0.01" class="form-control" name="carbs_100g" min="0.00" max="10000" required/>
        </div>
        <div class="form-group">
            <label>Fats  (per 100g)</label>
            <input type="number" step="0.01" class="form-control" name="fats_100g" min="0.00" max="10000" required/>
        </div>
        <div class="form-group">
            <label>Meal type</label>
            <select name="meal_type" class="form-control">
                {{#meal_type}}
                    <option value="{{meal_type_id}}">{{meal_type_name}}</option>
                {{/meal_type}}
            </select>
        </div>
        <button type="submit" class="btn btn-danger">Save</button>
    </form>
</div>
<!-- Bootstrap -->
<script src="scripts/js/bootstrap.js" ></script>
<link rel="stylesheet" href="scripts/css/clojure.css">
</body>
</html>
